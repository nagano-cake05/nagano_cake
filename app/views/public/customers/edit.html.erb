<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">会員情報編集</h4>
      <table class="table table-borderless">
       <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
  
        <tr>
         <th>フリガナ</th>
         <td><%= f.text_field :last_name_kana %></td>
         <td><%= f.text_field :first_name_kana %></td>
        </tr>
  
        <tr>
         <th>メールアドレス</th>
         <td><%= f.text_field :email %></td>
         <td></td>
        </tr>
  
        <tr>
         <th>郵便番号</th>
         <td><%= f.text_field :postal_code %></td>
         <td></td>
        </tr>
  
        <tr>
         <th>住所</th>
         <td><%= f.text_field :address %></td>
         <td></td>
        </tr>
  
        <tr>
         <th>電話番号</th>
         <td><%= f.text_field :telephone_number %></td>
        </tr>
  
        <tr>
         <td></td>
         <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
         <td><%= link_to "退会する", customers_quit_path, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
       </table>
    </div>
  </div>
</div>